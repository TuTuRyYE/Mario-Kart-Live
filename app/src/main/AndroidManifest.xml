<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.enseeiht.superjumpingsumokart">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-feature android:glEsVersion="0x00010100" />

    <application
        android:name="fr.enseeiht.superjumpingsumokart.arpack.ARApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".application.GUIWelcome"
            android:label="@string/title_activity_gui_game"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.enseeiht.superjumpingsumokart.arpack.GUIGame"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_gui_welcome"
            android:parentActivityName=".application.GUIWelcome"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.enseeiht.superjumpingsumokart.application.GUIWelcome" />
        </activity>
    </application>

</manifest>