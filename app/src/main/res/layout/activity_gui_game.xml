<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="fr.enseeiht.superjumpingsumokart.GUIGame"
    android:id="@+id/guiGameFrameLayout">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/guiGameFrameLayout">

        <Button
            android:text="left"
            android:layout_marginStart="22dp"
            android:id="@+id/turnLeftBtn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="27dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:minHeight="60dp"
            android:minWidth="140dp" />

        <Button
            android:text="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/turnLeftBtn"
            android:layout_toEndOf="@+id/turnLeftBtn"
            android:id="@+id/turnRightBtn"
            android:minHeight="60dp"
            android:minWidth="140dp" />

        <Button
            android:text="UP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moveForwardBtn"
            android:layout_marginEnd="30dp"
            android:minHeight="60dip"
            android:minWidth="140dip"
            android:layout_above="@+id/turnRightBtn"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="DOWN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moveBackwardBtn"
            android:minHeight="60dp"
            android:minWidth="140dp"
            android:layout_alignBaseline="@+id/turnRightBtn"
            android:layout_alignBottom="@+id/turnRightBtn"
            android:layout_alignEnd="@+id/moveForwardBtn"
            android:layout_marginEnd="12dp" />

        <Button
            android:text="USE TRAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendTrapBtn"
            android:minHeight="60dp"
            android:minWidth="140dp"
            android:allowUndo="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/turnLeftBtn" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/trapImageView"
            android:minHeight="100dp"
            android:minWidth="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/moveBackwardBtn" />

        <Button
            android:text="JUMP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jumpBtn"
            android:layout_alignBottom="@+id/trapImageView"
            android:layout_toStartOf="@+id/trapImageView"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="18dp"
            android:minHeight="60dp"
            android:minWidth="110dp" />

    </RelativeLayout>
</FrameLayout>
