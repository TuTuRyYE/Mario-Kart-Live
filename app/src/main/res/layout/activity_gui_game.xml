<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="fr.enseeiht.superjumpingsumokart.GUIGame"
    android:id="@+id/guiGameFrameLayout">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="left"
            android:layout_marginStart="22dp"
            android:id="@+id/turnLeftBtn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="27dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:minHeight="96dip"
            android:minWidth="172dip" />

        <Button
            android:text="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/turnLeftBtn"
            android:layout_toEndOf="@+id/turnLeftBtn"
            android:id="@+id/turnRightBtn"
            android:minHeight="96dip"
            android:minWidth="172dip" />

        <Button
            android:text="UP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moveForwardBtn"
            android:layout_marginEnd="66dp"
            android:layout_marginBottom="46dp"
            android:layout_above="@+id/turnRightBtn"
            android:layout_alignParentEnd="true"
            android:minHeight="96dip"
            android:minWidth="172dip" />

        <Button
            android:text="DOWN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/turnRightBtn"
            android:layout_alignEnd="@+id/moveForwardBtn"
            android:layout_marginBottom="12dp"
            android:id="@+id/moveBackwardBtn"
            android:minHeight="96dp"
            android:minWidth="172dp" />

        <Button
            android:text="USE TRAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/turnRightBtn"
            android:layout_toStartOf="@+id/moveForwardBtn"
            android:layout_marginEnd="77dp"
            android:id="@+id/sendTrapBtn"
            android:minHeight="96dp"
            android:minWidth="172dp"
            android:allowUndo="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/trapImageView"
            android:minHeight="100dp"
            android:minWidth="200dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/moveForwardBtn" />

    </RelativeLayout>
</FrameLayout>
